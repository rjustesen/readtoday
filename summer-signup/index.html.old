                    var size = file.size / 1024 / 1024;
                    var typ =  file.type;
                    if (size <= 20 && (typ === "image/gif" || typ === "image/jpeg" || typ === "image/png" || typ === "application/pdf")	) {
                      if (file) {
                        reader.readAsDataURL(file);
                        frmdata.append(file.name, file);
